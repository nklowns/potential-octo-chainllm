# ============================================
# CONFIGURAÇÃO DE DOMÍNIOS
# ============================================
DOMAIN_DUCKDNS=drake-ayu.duckdns.org
DOMAIN_LOCAL=drake-ayu.local

# ============================================
# CONFIGURAÇÃO DE REDE E TRAEFIK
# ============================================
TRAEFIK_NETWORK=proxy_net
TRAEFIK_ENTRYPOINT=websecure

# ============================================
# SERVIÇO OLLAMA (Geração de Scripts)
# ============================================
# URL do serviço Ollama - pode ser local ou externo
OLLAMA_BASE_URL=https://ollama.drake-ayu.duckdns.org
# OLLAMA_BASE_URL=http://ollama:11434  # Alternativa local

# Modelo a ser usado para geração de scripts
OLLAMA_MODEL=gemma3:4b

# Configurações de geração
OLLAMA_TEMPERATURE=0.7      # Criatividade (0.0-1.0, padrão: 0.7)
OLLAMA_TOP_K=40             # Top-K sampling (padrão: 40)
OLLAMA_TOP_P=0.9            # Top-P sampling (padrão: 0.9)
OLLAMA_NUM_PREDICT=150      # Máximo de tokens (padrão: 150)

# Rate limiting (requests por minuto)
# 0 = sem limite (ideal para testes)
OLLAMA_RATE_LIMIT=0

# ============================================
# SERVIÇO PIPER TTS (Text-to-Speech)
# ============================================
TTS_SERVICE_NAME=piper-tts
TTS_PORT=5000

# URL do serviço TTS - pode ser local ou externo
TTS_BASE_URL=https://piper-tts.drake-ayu.duckdns.org
# TTS_BASE_URL=http://piper-tts:5000  # Alternativa local

# Configurações de voz
TTS_VOICE=pt_BR-faber-medium
TTS_LENGTH_SCALE=1.0        # Velocidade (0.5-2.0, padrão: 1.0)
TTS_NOISE_SCALE=0.667       # Variabilidade de áudio (0.0-1.0, padrão: 0.667)
TTS_NOISE_W_SCALE=0.8       # Variabilidade de fonemas (0.0-1.0, padrão: 0.8)

# Rate limiting (requests por minuto)
# 0 = sem limite (ideal para testes)
TTS_RATE_LIMIT=0

# ============================================
# SERVIÇO STABLE DIFFUSION (Geração de Imagens)
# ============================================
# URL do serviço Stable Diffusion - pode ser local ou externo
SD_API_URL=https://sd-api.drake-ayu.duckdns.org/sdapi/v1/txt2img
# SD_API_URL=http://stable-diffusion-api:7860/sdapi/v1/txt2img  # Alternativa local

# ============================================
# CONFIGURAÇÕES GERAIS
# ============================================
TZ=America/Sao_Paulo

# ============================================
# DIRETÓRIOS DE TRABALHO (Caminhos do Container)
# ============================================
INPUT_FILE=/home/appuser/app/input/topics.txt
OUTPUT_SCRIPTS=/home/appuser/app/output/scripts
OUTPUT_AUDIO=/home/appuser/app/output/audio
SCRIPTS_DIR=/home/appuser/app/output/scripts
IMAGES_DIR=/home/appuser/app/output/images
